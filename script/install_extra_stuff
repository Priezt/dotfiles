#!/usr/bin/env bash

mkdir -p ~/.config/ranger
if ! [[ -f ~/.config/ranger/rc.conf ]] ; then
	mkdir -p ~/.config/ranger
	ln -s ~/.dotfiles/ranger/rc.conf ~/.config/ranger/rc.conf
fi

if ! [[ -f ~/.config/zellij/config.kdl ]] ; then
	mkdir -p ~/.config/zellij
	ln -s ~/.dotfiles/zellij/config.kdl ~/.config/zellij/config.kdl
fi

mkdir -p ~/.claude-minimax
CLAUDE_CONFIG_FILES="settings.json CLAUDE.md"
for f in $CLAUDE_CONFIG_FILES ; do
	if ! [[ -f ~/.claude-minimax/$f ]] ; then
		ln -s ~/.dotfiles/claude/$f ~/.claude-minimax/$f
	fi
done
if ! [[ -f ~/.claude-minimax/agents ]] ; then
	ln -s ~/my-claude-agents ~/.claude-minimax/agents
fi
